<% if user_signed_in? %>

<table class="table table-striped table-bordered table-hover">
  <thead class="bg-dark text-light ">
    <tr >
      <th>Name</th>

      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th>User Id</th>
      <th colspan="2 "> Actions</th>
    </tr>
  </thead>

  <tbody >
    <% @friends.each do |friend| %>
      <tr >
        <% if friend.user == current_user %>
        <td><%= link_to friend.first_name %>  <%= link_to friend.last_name %></td>
          <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
        <td><%= friend.user_id %></td>
<!--        <td><%#= link_to 'Show', friend %></td>-->

        <%# if friend.user == current_user  %>
        <td><%= link_to 'Edit', edit_friend_path(friend) %></td>
        <td><%= button_to 'Destroy', friend , method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-outline-danger"%></td>
<%# else %>
<!--        <td> </td>-->
<!--        <td> </td>-->
      <% end %>
          </tr>
    <% end %>
  </tbody>
</table>

<br/>

<%= link_to 'New Friend', new_friend_path , class:"btn btn-secondary" %>

  <% else %>

<% redirect_to home_index_path %>

<% end %>